<script>
	document.querySelectorAll(".a-nav").forEach(a => a.addEventListener('click', setLinkActive));

	function setLinkActive(e){
		document.querySelectorAll(".a-nav").forEach(a => a.classList.remove('active'));
		document.querySelector(`#${e.target.id}`).classList.add('active');
	}
</script>